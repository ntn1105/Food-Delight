extends ../../layout/defaut.pug

block main  
    h1(class="mb-4") Thêm mới tài khoản

    form(
        action=`${prefixAdmin}/roles/create`
        method="POSt"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
            )
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
            )
        div(class="form-group")
            label(for="password") Mật khẩu *
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                required
            )
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
            )
        div(class='form-group'
            upload-image
        )
            label(for="thumbnail") Avatar 
            input(
                type="file"
                class='form-control-file'
                id='thumbnail'
                name='avatar'
                accept='image/*'
                upload-image-input
            )
            img(src="" upload-image-preview
                class='image-preview'
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Tạo mới